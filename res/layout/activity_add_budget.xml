<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    android:layout_height="match_parent">
<GridLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.iut.csid.projet.gestibank.activity.budget.AddBudgetActivity"
    tools:ignore="MergeRootFrame"
    android:columnCount="2"
    android:rowCount="8"
    android:scrollbars="vertical|horizontal">
	
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_row="0"
        android:text="PARAMETRAGE DES BUDGETS"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="20dp" />
    
    <TextView
        android:id="@+id/tv_budgetRestant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_vertical|right"
        android:layout_row="1"
        android:layout_margin="10dp" />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_vertical|right"
        android:layout_row="2"
        android:text="Alimentaire :"
        android:layout_margin="10dp" />

	<EditText
	    android:id="@+id/txt_budgetAlimentaire"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_column="1"
	    android:layout_gravity="center_vertical|left"
	    android:layout_row="2"
	    android:ems="10"
	    android:inputType="numberDecimal"
	    android:layout_margin="10dp" >

    </EditText>
    
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_vertical|right"
        android:layout_row="3"
        android:text="Divers :"
        android:layout_margin="10dp" />
    <EditText
        android:id="@+id/txt_budgetDivers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center_vertical|left"
        android:layout_row="3"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_margin="10dp" />
    
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_vertical|right"
        android:layout_row="4"
        android:text="Loisirs :"
        android:layout_margin="10dp" />
    <EditText
        android:id="@+id/txt_budgetLoisirs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center_vertical|left"
        android:layout_row="4"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_vertical|right"
        android:layout_row="5"
        android:text="Transports :"
        android:layout_margin="10dp" />
    <EditText
        android:id="@+id/txt_budgetTransports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center_vertical|left"
        android:layout_row="5"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_vertical|right"
        android:layout_row="6"
        android:text="VÃªtements :"
        android:layout_margin="10dp" />
    <EditText
        android:id="@+id/txt_budgetVetements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center_vertical|left"
        android:layout_row="6"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_margin="10dp" />

	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_column="0"
	    android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_row="7"
        style="@attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

		<Button
		    android:id="@+id/bt_budgetRecord"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right|center_vertical"
		    android:text="Valider" />
	
	    <Button
	        android:id="@+id/bt_budgetAbord"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left|center_vertical"
	        android:text="Annuler" />
	    
	</LinearLayout>

</GridLayout>
</ScrollView>