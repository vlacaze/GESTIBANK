<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
    android:layout_height="match_parent">

<GridLayout
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="5"
    tools:context="fr.iut.csid.projet.gestibank.activity.setting.SettingActivity"
    tools:ignore="MergeRootFrame"
    android:scrollbars="vertical|horizontal" >
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="20dp"
        android:layout_row="0"
        android:text="PARAMETRAGE DU COMPTE"
        android:textSize="20sp"
        android:textStyle="bold" />
    
	<TextView
	    android:id="@+id/textView2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_column="0"
	    android:layout_gravity="center_vertical|right"
	    android:layout_row="1"
	    android:text="Nom du compte :" />

   	<EditText
   	    android:id="@+id/txt_accountLabel"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_column="1"
   	    android:layout_gravity="center_vertical|left"
   	    android:layout_row="1"
   	    android:ems="10"
   	    android:inputType="text" >

    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="center_vertical|right"
        android:layout_row="2"
        android:text="Solde de dÃ©part :" />

    <EditText
        android:id="@+id/txt_accountAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_gravity="center_vertical|left"
        android:layout_row="2"
        android:ems="10"
        android:inputType="numberDecimal" />
    
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_margin="20dp"
        android:layout_row="3"
        android:text="MONTANT EN EUROS"
        />
    
	<LinearLayout 
	    android:orientation="horizontal"
	    android:layout_column="0"
	    android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_row="4"
        style="@attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
	    
	    <Button
	        android:id="@+id/bt_accountRecord"
	        style="@attr/buttonBarButtonStyle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Valider" />

	    <Button
	        android:id="@+id/bt_accountAbord"
	        style="@attr/buttonBarButtonStyle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Annuler" />

	</LinearLayout>
    

</GridLayout>
</ScrollView>